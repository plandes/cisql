<?xml version="1.0" encoding="UTF-8"?>

<configuration packages="com.zensol.clojure.log"
               status="OFF" monitorInterval="5">
    <appenders>
        <console name="console" target="SYSTEM_OUT">
            <patternLayout pattern="%c{1}: %m%n"/>
        </console>

        <console name="user-feedback" target="SYSTEM_OUT">
            <patternLayout pattern="%m%n"/>
        </console>

        <clojure name="user-feedback-repl">
	    <patternLayout pattern="%m%n"/>
        </clojure>

        <clojure name="repl">
            <!--patternLayout pattern="%c{1}: %m%n"/-->
	    <patternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.S}: %c{1}: %m%n"/>
        </clojure>
    </appenders>

    <loggers>
        <logger name="com.zensol.cisql" level="debug" additivity="false">
            <appenderRef ref="user-feedback-repl"/>
        </logger>

        <!--logger name="com.zensol.cisql" level="debug"/-->

        <root level="warn">
            <appenderRef ref="console"/>
            <appenderRef ref="repl"/>
        </root>
    </loggers>
</configuration>
