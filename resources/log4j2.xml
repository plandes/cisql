<?xml version="1.0" encoding="UTF-8"?>

<configuration packages="com.zensol.clojure.log"
               status="OFF" monitorInterval="5">
    <appenders>
        <console name="console" target="SYSTEM_OUT">
            <patternLayout pattern="%c{1}: %m%n"/>
        </console>

        <console name="user-feedback" target="SYSTEM_OUT">
            <patternLayout pattern="%m%n"/>
        </console>
    </appenders>

    <loggers>
        <logger name="com.zensol.cisql" level="info" additivity="false">
            <appenderRef ref="user-feedback"/>
        </logger>

        <!--logger name="com.zensol.cisql" level="debug"/-->

        <root level="warn">
            <appenderRef ref="console"/>
            <appenderRef ref="repl"/>
        </root>
    </loggers>
</configuration>
